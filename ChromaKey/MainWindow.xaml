<Window x:Class="ChromaKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="517" Width="1961"
        Background="AliceBlue">
    <Grid Height="480" ShowGridLines="True" Width="1940">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="640" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="640" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Background="Bisque" >
            <Image Name="imgColor" />
        </Grid>
        
        <Grid Grid.Column="2" Background="CadetBlue">
            <Image Name="imgPlayer" Stretch="Fill" />
        </Grid>
        
        <Grid Grid.Column="4" Background="Goldenrod">
            <Image Name="imgChromaKey" Stretch="Fill" />
        </Grid>
    </Grid>
</Window>
